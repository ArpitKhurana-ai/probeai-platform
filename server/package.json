{
  "name": "probeai-platform",
  "version": "1.0.0",
  "private": true,
  "type": "module",

  /*───────────────────────────────*
   |  Scripts                      |
   *───────────────────────────────*/
  "scripts": {
    /* FRONTEND (runs only on Vercel CI) */
    "build:client": "cd client && vite build",

    /* BACKEND  (runs on Railway CI)  */
    "build:server": "esbuild server/index.ts                        \
                       --platform=node                              \
                       --packages=external                          \
                       --bundle --format=esm                        \
                       --outfile=dist/server/index.js               \
                       --external:./vite.ts --external:../vite.config",

    /* default build → just the backend bundle                       *
     * Railway calls:   npm run build                                 */
    "build": "npm run build:server",

    /* local full-stack build (optional) */
    "build:all": "npm run build:server && npm run build:client",

    /* start container on Railway */
    "start": "node provision_database.js && node dist/server/index.js",

    /* helper */
    "provision": "node provision_database.js"
  },

  /*───────────────────────────────*
   |  Backend dependencies         |
   *───────────────────────────────*/
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "@types/pg": "^8.10.7",
    "drizzle-orm": "^0.33.0",
    "zod": "^3.23.5",
    "ws": "^8.14.2",
    "openid-client": "^5.6.5",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "express-session": "^1.17.3",
    "connect-pg-simple": "^9.0.1",
    "memoizee": "^0.4.15",
    "@types/express": "^4.17.17",
    "@types/node": "^20.8.0",
    "@types/passport": "^1.0.12",
    "@types/passport-local": "^1.0.35",
    "@types/express-session": "^1.17.7",
    "@types/memoizee": "^0.4.8",
    "algoliasearch": "^4.20.0",
    "nanoid": "^5.0.4"
  },

  /*───────────────────────────────*
   |  Build-time only              |
   *───────────────────────────────*/
  "devDependencies": {
    "esbuild": "^0.19.12",
    "vite": "^5.4.10"           /* still needed for local client build */
  }
}
